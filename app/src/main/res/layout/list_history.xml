<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/tv_nama_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galih Suprayitno"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_gambar"/>

        <TextView
            android:id="@+id/tv_jenissampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Sampah"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_below="@+id/tv_nama_siswa"
            android:layout_toRightOf="@+id/iv_gambar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_hargasampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_below="@+id/tv_jenissampah"
            android:layout_toRightOf="@+id/iv_gambar"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_statussampah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_below="@+id/tv_hargasampah"
            android:layout_toRightOf="@+id/iv_gambar"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</LinearLayout>